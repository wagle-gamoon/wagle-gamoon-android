<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Widget.Material3.Toolbar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigationStyle">
        <item name="background">@color/blue_light</item>
        <item name="itemRippleColor">@null</item>
        <item name="itemIconTint">@color/selector_bottom_navigation</item>
        <item name="itemTextColor">@color/selector_bottom_navigation</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
    </style>

    <!--  Custom Font  -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- light -->
    <style name="customTextViewFontStyle.light">
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_light</item>
    </style>

    <style name="customTextViewFontStyle.light.S12">
        <item name="android:textSize">12sp</item>
    </style>


    <!--  Regular font  -->
    <style name="customTextViewFontStyle.S12">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="customTextViewFontStyle.S14">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="customTextViewFontStyle.S16">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="customTextViewFontStyle.S16.black">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="customTextViewFontStyle.S12.gray_50">
        <item name="android:textColor">@color/gray_50</item>
    </style>
    <style name="customTextViewFontStyle.S20">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- light -->
    <style name="customTextViewFontStyle.medium">
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_medium</item>
    </style>
    <style name="customTextViewFontStyle.medium.S10">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="customTextViewFontStyle.medium.S10.white">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="customTextViewFontStyle.medium.S10.gray_50">
        <item name="android:textColor">@color/gray_50</item>
    </style>
    <style name="customTextViewFontStyle.medium.S14">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="customTextViewFontStyle.medium.S14.gray_50">
        <item name="android:textColor">@color/gray_50</item>
    </style>
    <style name="customTextViewFontStyle.medium.S18">
        <item name="android:textSize">18sp</item>
    </style>

    <!--  Bold font  -->
    <style name="customTextViewFontStyle.Bold">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:fontFamily">@font/ibm_plex_sans_kr_bold</item>
    </style>
    <style name="customTextViewFontStyle.Bold.S14">
        <item name="android:textSize">14sp</item>
    </style>

</resources>