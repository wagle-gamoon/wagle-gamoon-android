<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_rock_paper"
            android:layout_width="match_parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            android:layout_height="wrap_content"
            app:title="룰렛 선정하기"
            app:titleCentered="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_scissors"
            android:layout_width="167dp"
            android:layout_height="127dp"
            android:background="@drawable/selector_button_color"
            android:src="@drawable/ic_scissors"
            android:paddingTop="13dp"
            android:paddingBottom="12dp"
            android:paddingStart="28dp"
            android:paddingEnd="32dp"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_rock_paper" />

        <ImageView
            android:id="@+id/iv_scissors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_scissors"
            app:layout_constraintStart_toStartOf="@id/btn_scissors"
            app:layout_constraintEnd_toEndOf="@id/btn_scissors"
            app:layout_constraintTop_toTopOf="@id/btn_scissors"
            app:layout_constraintBottom_toBottomOf="@id/btn_scissors" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_rock"
            android:layout_width="167dp"
            android:layout_height="127dp"
            android:background="@drawable/selector_button_color"
            android:src="@drawable/ic_scissors"
            android:paddingTop="13dp"
            android:paddingBottom="12dp"
            android:paddingStart="28dp"
            android:paddingEnd="32dp"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@id/btn_scissors" />

        <ImageView
            android:id="@+id/iv_rock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_rock"
            app:layout_constraintStart_toStartOf="@id/btn_rock"
            app:layout_constraintEnd_toEndOf="@id/btn_rock"
            app:layout_constraintTop_toTopOf="@id/btn_rock"
            app:layout_constraintBottom_toBottomOf="@id/btn_rock" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_paper"
            android:layout_width="167dp"
            android:layout_height="127dp"
            android:background="@drawable/selector_button_color"
            android:src="@drawable/ic_scissors"
            android:paddingTop="13dp"
            android:paddingBottom="12dp"
            android:paddingStart="28dp"
            android:paddingEnd="32dp"
            android:enabled="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@id/btn_rock" />

        <ImageView
            android:id="@+id/iv_paper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_paper"
            app:layout_constraintStart_toStartOf="@id/btn_paper"
            app:layout_constraintEnd_toEndOf="@id/btn_paper"
            app:layout_constraintTop_toTopOf="@id/btn_paper"
            app:layout_constraintBottom_toBottomOf="@id/btn_paper" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>