<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.widget.Button
            android:id="@+id/btn_title"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity=""
            android:background="@drawable/post_box"
            android:text="더미데이터"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:text="2024.02.17"
            android:textColor="#a9a9a9"
            android:paddingTop="40dp"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/btn_title"
            app:layout_constraintTop_toTopOf="@+id/btn_title" />

        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="45dp"
            android:text="닉네임"
            android:textColor="#a9a9a9"
            app:layout_constraintBottom_toBottomOf="@+id/btn_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_date"
            app:layout_constraintTop_toTopOf="@+id/btn_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>