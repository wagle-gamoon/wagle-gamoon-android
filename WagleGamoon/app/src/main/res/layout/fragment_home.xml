<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.widget.Button
            android:id="@+id/btn_free_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rectangle_button"
            android:elevation="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="자유 게시판"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="@id/btn_study_recruit_button"
            app:layout_constraintStart_toStartOf="@id/btn_study_recruit_button"
            app:layout_constraintBottom_toTopOf="@id/btn_question_post_button"
            android:textSize="23dp" />

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:logo="@drawable/ic_app_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

        <android.widget.Button
            android:id="@+id/btn_question_post_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_button"
            android:elevation="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="질문 게시판"
            android:textColor="#ffffff"
            android:textSize="21dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="@id/btn_study_recruit_button"
            app:layout_constraintStart_toStartOf="@id/btn_study_recruit_button"
            app:layout_constraintBottom_toTopOf="@id/btn_study_recruit_button"
            app:layout_constraintVertical_bias="0.75" />


        <android.widget.Button
            android:id="@+id/btn_study_recruit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_button"
            android:elevation="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="스터디 모집 게시판"
            android:textColor="#ffffff"
            android:textSize="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="진짜 삽질 야무지게\n하는 중"
            android:textSize="26dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_free_post_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view4" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:paddingLeft="30dp"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toTopOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.26999998"
            app:srcCompat="@drawable/logo" />

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="#ababab"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.110000014" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_free_post_button"
            app:layout_constraintEnd_toEndOf="@+id/btn_free_post_button"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/btn_free_post_button"
            app:layout_constraintTop_toTopOf="@+id/btn_free_post_button"
            app:srcCompat="@drawable/arrow" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_question_post_button"
            app:layout_constraintEnd_toEndOf="@+id/btn_question_post_button"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/btn_question_post_button"
            app:layout_constraintTop_toTopOf="@+id/btn_question_post_button"
            app:srcCompat="@drawable/arrow" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_study_recruit_button"
            app:layout_constraintEnd_toEndOf="@+id/btn_study_recruit_button"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="@+id/btn_study_recruit_button"
            app:layout_constraintTop_toTopOf="@+id/btn_study_recruit_button"
            app:srcCompat="@drawable/arrow" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>